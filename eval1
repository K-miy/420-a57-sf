#!/bin/bash
# Script simple pour évaluation VM

# Obtenir le matricule depuis le hostname
MATRICULE=$(hostname | grep -oE '[0-9]+' || echo "0000000")

# Exécuter commandes séquentiellement
sudo mkdir -p /media/sf_vm_share
sudo mount -t vboxsf vm_share /media/sf_vm_share
sudo chmod 777 /media/sf_vm_share
loadkeys ca-fr &>/dev/null || loadkeys cf &>/dev/null || echo "Clavier non configuré"
cd /media/sf_vm_share
sudo chmod +x auto_eval.sh vm_evaluator.sh
sudo ./auto_eval.sh $MATRICULE

echo "Évaluation terminée pour l'étudiant $MATRICULE"
